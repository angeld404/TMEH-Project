#include "msp.h"
#include <string.h>
#include "set_dco.h"
#include "delay_us.h"
#include "LCD.h"

void main(void) {

    // stop watchdog timer
    WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;

    //set MCLK to DCO at nominal 48 MHz
    set_DCO(FREQ_6_MHZ);

    //initialize LCD
    LCD_initialize();

    //blink phrase "Hello World!!!!!!!!!!!!!" indefinitely
    while(1){
        Clear_LCD();
        delay_us(700000);
        Write_string_LCD("Hello World!!!!!!!!!!!!!");
        delay_us(700000);
    }

 }


